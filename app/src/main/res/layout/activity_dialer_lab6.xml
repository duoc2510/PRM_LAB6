<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#F3F4F6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:padding="24dp">

    <TextView
        android:id="@+id/number_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_display"
        android:textColor="#111111"
        android:textSize="28sp"
        android:gravity="center_vertical|start"
        android:padding="16dp"
        android:text=""/>

    <TableLayout
        android:id="@+id/keyboard"
        android:layout_below="@id/number_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:stretchColumns="*">

        <TableRow android:layout_marginBottom="8dp">
            <Button style="@style/DialPadButton" android:id="@+id/btn1" android:text="1" />
            <Button style="@style/DialPadButton" android:id="@+id/btn2" android:text="2" />
            <Button style="@style/DialPadButton" android:id="@+id/btn3" android:text="3" />
        </TableRow>

        <TableRow android:layout_marginBottom="8dp">
            <Button style="@style/DialPadButton" android:id="@+id/btn4" android:text="4" />
            <Button style="@style/DialPadButton" android:id="@+id/btn5" android:text="5" />
            <Button style="@style/DialPadButton" android:id="@+id/btn6" android:text="6" />
        </TableRow>

        <TableRow android:layout_marginBottom="8dp">
            <Button style="@style/DialPadButton" android:id="@+id/btn7" android:text="7" />
            <Button style="@style/DialPadButton" android:id="@+id/btn8" android:text="8" />
            <Button style="@style/DialPadButton" android:id="@+id/btn9" android:text="9" />
        </TableRow>

        <TableRow>
            <Button style="@style/DialPadButton" android:id="@+id/btn_star" android:text="*" />
            <Button style="@style/DialPadButton" android:id="@+id/btn0" android:text="0" />
            <Button style="@style/DialPadButton" android:id="@+id/btn_clear" android:text="Xóa" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btn_call"
        android:layout_below="@id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gọi"
        android:layout_marginTop="24dp"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_button_call"
        android:padding="12dp" />
</RelativeLayout>
